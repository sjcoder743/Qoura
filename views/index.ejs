<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All posts</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>All posts are here</h1>
    <div class="main">
      <% for(let post of posts) { %>
      <div class="post">
        <h3 class="username"><i>@<%= post.username %></i></h3>
        <p class="content">Post id : <%= post.id %></p>
        <p class="content">Content : <%= post.content %></p>
        <button class="btn-del">
          <a href="/posts/<%= post.id %>">see in detail</a>
        </button>
        <button class="btn-del">
          <a href="/posts/<%= post.id %>/edit">Edit</a>
        </button>
        <form action="/posts/<%= post.id %>?_method=Delete" method="post">
          <button>Delete post</button>
        </form>
      </div>
      <% } %>
    </div>
    <div class="center">
      <button class="btn">
        <a href="http://localhost:8080/posts/new">Create new post</a>
      </button>
    </div>
  </body>
</html>
